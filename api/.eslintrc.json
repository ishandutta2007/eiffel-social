{
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "globalReturn": true,
            "jsx": true
        }
    },
    "env": {
        "node": true
    },
    "rules": {
        "semi": "error",
        "eqeqeq": "error",
        "curly": "error",
        "quotes": ["error", "single"],
        "indent": ["warn", 4],
        "no-unreachable": "error",
        "no-unused-vars": "error",
        "no-undef": "error",
        "space-infix-ops": "error",
        "arrow-parens": "error",
        "prefer-arrow-callback": "error"
    },
    "globals": {
        "Promise": false
    }
}
